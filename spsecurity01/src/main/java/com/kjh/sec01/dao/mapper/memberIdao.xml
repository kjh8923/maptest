<?xml version="1.0" encoding="UTF-8"?>
<!-- mapper문서형식 지정 -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- root element는 mapper -->
<!-- 속성 namespace는 인터페이스의 경로 및 인터페이스명 -->
<mapper namespace = "com.kjh.sec01.dao.MemberIdao">
	<!-- join 처리 -->
	<insert id="join" parameterType="com.kjh.sec01.dto.JoinDto">
		INSERT INTO USERDB (PID, PPW, PADDRESS, PHOBBY, PPROFILE) VALUES (#{pid}, #{ppw}, #{paddress}, #{phobby}, #{pprofile})
	</insert>
	
	<!-- login 처리 -->
	<select id="login" parameterType="String" resultType="com.kjh.sec01.dto.JoinDto">
		SELECT * FROM USERDB WHERE PID = #{pid}
	</select>
</mapper>	


